extends layout

block content 
  section(class='py-3')
    div(class="mb-4")
        h4 Deleting Instance #{drinkinstance._id}
        h6 (#{drinkinstance.drink.name})

    p(class="mt-3") Are you sure you want to remove #{drinkinstance.drink.name}'s instance #{drinkinstance._id}?

    form(method="POST" action ="")
        div(class="col-sm-12 col-md-6 d-flex justify-content-between" style={'max-width': '550px'})
            div(class="col")
                a(class="col btn btn-outline-primary" href=backURL role="button") Cancel
            div(class="col")
                button(class="col btn btn-danger" type='submit') Delete