extends layout

block content 
  section(class='py-3')
    div(class="mb-4")
        h1(class="h1 col-sm-12 col-md-6") #{brand.name}

    h4(class="h4") Drinks
    ul(class='list-group mt-3')
        if drinksDeleteErrorMsg
            p(class="alert alert-danger") #{brand.name} can only be deleted after the drinks listed below have been removed.
        else 
            p(class="alert") #{brand.name} can only be deleted after the drinks listed below have been removed.

        each drink in drinks
            a(href=drink.url class="list-group-item list-group-item-action") 
                p(class="h5 mb-3") #{drink.name }
          

        else 
            li(class='list-group-item') #{brand.name} has no drinks registered.

    p(class="mt-3") Are you sure you want to remove #{brand.name}?

    form(method="POST" action ="")
        div(class="col-sm-12 col-md-6 d-flex justify-content-between" style={'max-width': '550px'})
            div(class="col")
                a(class="col btn btn-outline-primary" href=backURL role="button") Cancel
            div(class="col")
                button(class="col btn btn-danger" type='submit') Delete